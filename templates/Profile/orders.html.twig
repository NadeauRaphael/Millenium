{% extends 'core/base.html.twig' %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{asset('Styles/order.css')}}">
{% endblock %}
{% block content %}
	<div class="row">
		<div class="card text-black my-3 shadow-2-strong card-table" style="border-radius: 15px;">
			<div class="card-body px-md-5">
				<h1 class="mb-2 text-center text-success ">Orders</h1>
				<hr>
				<div class="col-8 mx-auto">
					<table class="table text-center table-wrap">
						<thead style="background-color: #f5f6f7;">
							<th># Order</th>
							<th>Date</th>
							<th>Total</th>
							<th>Status</th>
							<th>Details</th>
						</thead>
						<tbody>
							{% for order in currentUser.orders %}
								<tr>
									<th scope="row">{{ order.idOrder }}</th>
									<th>{{ order.orderDate|date("Y-m-d h:m:s") }}</th>
									<th>{{ order.getTotal() }}</th>
									<th>
										{{order.state}}
									</th>
									<th>
										<button class="btn">
											<i class="fas fa-eye text-info"></i>
										</button>
									</th>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
