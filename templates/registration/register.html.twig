{% extends 'core/base.html.twig' %}
{% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}
{% block stylesheets %}
        <link rel="stylesheet" href="{{asset('Styles/login.css')}}">
{% endblock %}
{% block content %}
	<div class="row mb-5">
		<div class="col-lg-8 mx-auto">
			{% for flash in app.flashes('register')%}
				<div class="alert my-3 {{ flash.color }}">{{ flash.content }}</div>
			{% endfor %}
			{{ form_start(registrationForm, {'attr': {'class': 'needs-validation-register', 'novalidate': 'novalidate' }}) }}
			<div class="card text-black mt-5 shadow-2-strong  card-register" style="border-radius: 15px;">
				<div class="card-body p-md-5">
					<h1 class="mb-4 pb-2 pb-md-0 mb-md-5 text-center">Account creation</h1>
					<div class="row">
						<div class="col-12">
							{{ form_row(registrationForm.email) }}
						</div>
					</div>
					<div class="row">
						<div class="col-6">
							{{ form_row(registrationForm.firstName) }}
						</div>
						<div class="col-6">
							{{ form_row(registrationForm.lastName) }}
						</div>
					</div>
					<div class="row">
						<div class="col-6">
							{{ form_row(registrationForm.password.first) }}
						</div>
						<div class="col-6">
							{{ form_row(registrationForm.password.second) }}
						</div>
					</div>
					<div class="row">
						<div class="col-9">
							{{ form_row(registrationForm.adress) }}
						</div>
						<div class="col-3">
							{{ form_row(registrationForm.city) }}
						</div>
					</div>
					<div class="row">
						<div class="col-4">
							{{ form_row(registrationForm.postalCode) }}
						</div>
						<div class="col-4">
							{{ form_row(registrationForm.province) }}
						</div>
						<div class="col-4">
							{{ form_row(registrationForm.phone, {'attr': {'class': 'txtPhone'}}) }}
						</div>
					</div>
					<div class="d-flex justify-content-center">
						{{ form_row(registrationForm.create) }}
					</div>
					{{ form_end(registrationForm) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
	<script defer src="https://cdn.jsdelivr.net/npm/jquery-mask-plugin@1.14.16/dist/jquery.mask.min.js"></script>
	<script defer src="{{ asset('scripts/register.js')}}"></script>
{% endblock %}
